<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="Simple_Calculator.MainPage"
                        xmlns:local ="clr-namespace:Simple_Calculator">

    <StackLayout Margin="0,0" >
        <Label Text="" Margin="0,0,0,0" HeightRequest="150" BackgroundColor="LightBlue" Padding="10" VerticalTextAlignment="Center" HorizontalTextAlignment="End" FontSize="50"/>

        <FlexLayout Direction="Row" Padding="0,0,0,0" Margin="0,5">
            <Button Text="1" Padding="35" FontSize="25" ></Button>
            <Button Text="2" Padding="35" FontSize="25"></Button>
            <Button Text="3" Padding="35" FontSize="25"></Button>
            <Button Text="*" Padding="35" FontSize="25"></Button>
            
        </FlexLayout>
        <FlexLayout Direction="Row" WidthRequest="100" Padding="0,0,0,0" Margin="0,-10">
            <Button Text="4" Padding="35" FontSize="25"></Button>
            <Button Text="5" Padding="35" FontSize="25"></Button>
            <Button Text="6" Padding="35" FontSize="25"></Button>
            <Button Text="-" Padding="35" FontSize="25"></Button>

        </FlexLayout>
        <FlexLayout Direction="Row" Padding="0,0,0,0">
            <Button Text="7" Padding="35" FontSize="25"></Button>
            <Button Text="8" Padding="35" FontSize="25"></Button>
            <Button Text="9" Padding="35" FontSize="25"></Button>
            <Button Text="/" Padding="35" FontSize="25"></Button>

        </FlexLayout>
        <FlexLayout Direction="Row" WidthRequest="100" Padding="0,0,0,0" Margin="0,-10">
            <Button Text="." Padding="35" FontSize="25"></Button>
            <Button Text="0" Padding="35" FontSize="25"></Button>
            <Button Text="=" Padding="35" FontSize="25"></Button>
            <Button Text="+" Padding="35" FontSize="25"></Button>

        </FlexLayout>
        <Button Text="Clear" Margin="0,0,0,0" Padding="30"></Button>

    </StackLayout>
   
    
</ContentPage>
